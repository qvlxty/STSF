{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "lib": ["es2017", "dom"],
    "paths": {
      "@":["/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist","node_modules"],
}
